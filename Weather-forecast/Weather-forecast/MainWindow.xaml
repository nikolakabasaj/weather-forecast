<Window x:Class="Weather_forecast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather_forecast"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid Background="#FF1F202B" Cursor="None" Margin="-16,0,15.6,0">
        <!-- <Grid.Background>
            <ImageBrush ImageSource="/Images/sky.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Canvas Grid.Column="5" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <TextBox x:Name="searchText" Grid.Column="5" Grid.Row="1" Width="120" Canvas.Left="605" Canvas.Top="14" Background="#FF826D6D" BorderThickness="1" RenderTransformOrigin="0.488,0.534"/>
            <Button x:Name="searchButton" Click="searchButton_Click" 
                    Grid.Column="6" Grid.Row="1" RenderTransformOrigin="11.739,0.697" Canvas.Left="725" Canvas.Top="14" Background="#FFDDDDDD" Foreground="White" Height="18" Width="22">
                <Image Source="/Images/search.jpg" />
            </Button>
        </Canvas>

        <StackPanel Grid.Row="0" Grid.RowSpan="6" RenderTransformOrigin="0.977,0.505" Margin="18,4,672.4,-2" Grid.Column="5">
            <StackPanel.Resources>
                <Style TargetType="StackPanel">
                    <Setter Property="Opacity" Value="0.6"/>
                    <Setter Property="Background" Value="#16191f"/>
                </Style>
            </StackPanel.Resources>
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.226"/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <Button x:Name="tableView" Content="Table" Margin="0,10,0.2,10" Click="tableView_Click"
                        Grid.Column="2" Grid.Row="2" Height="21" Foreground="White" Background="{x:Null}" RenderTransformOrigin="0.519,1.491"/>
            <Button x:Name="graphView" Content="Graph" Margin="0,10" Click="graphView_Click"
                        BorderBrush="#FFF3EDED" Foreground="White" RenderTransformOrigin="0.51,3.464" >
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
        </StackPanel>

        <WrapPanel Grid.Column="5" HorizontalAlignment="Left" Height="140" Margin="242,61,0,0" Grid.Row="4" VerticalAlignment="Top" Width="125" RenderTransformOrigin="0.503,0.529">
            <TextBlock TextWrapping="Wrap" Text="C" FontSize="110" Foreground="White" FontFamily="Segoe UI Light"/>
            <TextBlock TextWrapping="Wrap" Text="O" Foreground="White" FontFamily="Segoe UI Historic" FontSize="40"/>
        </WrapPanel>
        <Label x:Name = "clockTime"  Grid.Column="5" HorizontalAlignment="Left" Margin="449,89,0,0" Grid.Row="4" VerticalAlignment="Top" Height="106" Width="239" FontSize="80" Grid.IsSharedSizeScope="True" Background="{x:Null}" Foreground="#FFDADADA" RenderTransformOrigin="0.79,0.687"/>
        <Label x:Name = "clockSeconds" Content="" Grid.Column="5" HorizontalAlignment="Left" Margin="637,89,0,0" Grid.Row="4" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
        <Label x:Name="currentCity" Grid.Column="5" HorizontalAlignment="Left" Margin="93,21,0,0" Grid.Row="4" VerticalAlignment="Top" RenderTransformOrigin="0.448,-1.969" Height="68" Width="243" Foreground="White" FontSize="35" Content="    Current city"/>
        <Label Content="Current location" Grid.Column="5" HorizontalAlignment="Left" Margin="112,75,0,0" Grid.Row="4" VerticalAlignment="Top" RenderTransformOrigin="0.792,-2.328" Foreground="#FF9FA4BC" FontSize="14" Width="139"/>
        <Label x:Name="temmCurrentLocation"  Grid.Column="5" HorizontalAlignment="Left" Margin="112,102,0,0" Grid.Row="4" VerticalAlignment="Top" RenderTransformOrigin="0.208,-2.359" Height="93" Width="125" Foreground="White" FontSize="65" FontFamily="Segoe UI Semilight" Content="Tmp"/>
        <Label x:Name="icon" Content="icon" Grid.Column="5" HorizontalAlignment="Left" Margin="324,102,0,0" Grid.Row="4" VerticalAlignment="Top" Height="69" Width="99" FontSize="50" Foreground="White"/>

        <Line X1="130" Y1="300" X2="700" Y2="300" Stroke="White" StrokeThickness="200" Fill="White" OpacityMask="White" />
        <WrapPanel Grid.Column="5" HorizontalAlignment="Left" Height="50" Margin="324,195,0,0" Grid.Row="4" VerticalAlignment="Top" Width="207">
            <TextBlock TextWrapping="Wrap" Text="Measured at: " Foreground="#FFFCF9F9" FontFamily="Maiandra GD" Height="21"/>
            <Label x:Name="measuredTime" Foreground="White" FontFamily="Maiandra GD"/>

        </WrapPanel>
    </Grid>

</Window>
