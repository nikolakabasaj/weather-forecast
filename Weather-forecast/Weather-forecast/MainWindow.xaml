<Window x:Class="Weather_forecast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather_forecast"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/sky.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Canvas Grid.Column="5" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <TextBox x:Name="searchText" Grid.Column="5" Grid.Row="1" Width="120" Canvas.Left="508" Canvas.Top="11"></TextBox>
            <!--
            <Image Source="/Images/search.png" Height="23" Width="25" RenderTransformOrigin="0.162,0.681"/>
            -->
            <Button x:Name="searchButton" Click="searchButton_Click" Content="Search"
                    Grid.Column="6" Grid.Row="1" RenderTransformOrigin="11.739,0.697" Canvas.Left="633" Canvas.Top="11"></Button>
        </Canvas>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="10">
            <StackPanel.Resources>
                <Style TargetType="StackPanel">
                    <Setter Property="Opacity" Value="0.6"/>
                    <Setter Property="Background" Value="#16191f"/>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="tableView" Content="Table" Margin="10" Click="tableView_Click"
                        Grid.Column="2" Grid.Row="2" Background="#16191f"/>

            <Button x:Name="graphView" Content="Graph" Margin="10" Click="graphView_Click"
                        Grid.Column="2" Grid.Row="2" Background="#16191f" />
        </StackPanel>

        <TextBlock Grid.Row="1" Grid.Column="2" Foreground="WhiteSmoke" Grid.ColumnSpan="9" Margin="2,0,36.8,0.6" Grid.RowSpan="2">
            Hello world
        </TextBlock>
    </Grid>

</Window>
